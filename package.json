{
  "name": "yandex-music-browser",
  "version": "1.0.0",
  "description": "Media Player for Yandex station and Home Assistant lovelace",
  "type": "module",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "yandex",
    "alice",
    "lovelace",
    "media",
    "custom-cards"
  ],
  "repository": "git@github.com:itsib/yandex-media-player.git",
  "author": "Sergey <itsib.su@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "rollup -c rollup.config.dev.js --watch",
    "build": "rollup -c --environment BUILD:production",
    "lint": "eslint src/*.ts",
    "add": "git add custom_components/yandex_music_browser/lovelace/*",
    "bump": "bump package.json package-lock.json custom_components/yandex_music_browser/manifest.json -t -p -a",
    "publish": "npm run lint && npm run build && npm run add && npm run bump"
  },
  "dependencies": {
    "node-vibrant": "^3.2.1-alpha.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.23.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/pluginutils": "^5.0.5",
    "@types/node": "^18.16.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.3.0",
    "rollup-copy-transform-css": "^1.2.5",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^2.0.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "version-bump-prompt": "^6.1.0",
    "rimraf": "^5.0.0"
  }
}
